<section id="about">
    <div class="container">
        <div class="flex-about">
            <div class="wow bounceInLeft item-text">
                <div class="title-section" id="title-about">
                    <h1>@Resource.About</h1>
                    <span>
                        @ContentHelper.GetContent(Model.PageContents, EnumContentKey.AboutSubTitle)
                    </span>
                </div>
                <p>
                    @ContentHelper.GetContent(Model.PageContents, EnumContentKey.AboutText)
                </p>
            </div>
            <div class="item-img">
                <div class="about-img">
                    <img src="~/asserts/img/man about.png" />
                </div>
            </div>
        </div>
    </div>


</section>